{
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-undef": "error",
      "no-console": "off",
      "semi": ["error", "always"],
      "quotes": ["warn", "double"],
      "indent": ["warn", 2],
      "curly": "error",
      "eqeqeq": ["warn", "always"],
      "brace-style": ["warn", "1tbs", { "allowSingleLine": true }]
    }
  }
  